{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "importOrder": [
        "^(react|next?/?([a-zA-Z/]*))$",
        "<THIRD_PARTY_MODULES>",
        "^@/(.*)$",
        "^@/hooks/(.*)$",
        "^@/utils/(.*)$",
        "^@/components/(.*)$",
        "^[./]"
      ],
      "importOrderSeparation": true,
      "importOrderSortSpecifiers": true,
      "plugins": [
        "@trivago/prettier-plugin-sort-imports"
      ]
} 